@model WebApp.ViewModels.Feedbacks.FeedbackCreateEditViewModel

<div class="form-group">
    <label asp-for="Feedback.Comment" class="control-label"></label>
    <input asp-for="Feedback.Comment" class="form-control" />
    <span asp-validation-for="Feedback.Comment" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Feedback.Rating" class="control-label"></label>
    <input asp-for="Feedback.Rating" class="form-control" min="1" max="5" />
    <span asp-validation-for="Feedback.Rating" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Feedback.GameInfoId" class="control-label"></label>
    <select asp-for="Feedback.GameInfoId" class="form-control" asp-items="Model.GameInfoSelectList">
        <option>--- Choose game ---</option>
    </select>
    <span asp-validation-for="Feedback.GameInfoId" class="text-danger"></span>
</div>
